extends admin.pug 

append admin_css 
    link(rel="stylesheet", href="/stylesheets/userInsert.css")

block admin_main_content
    section#insertUserContainer
        h2(style="margin-left:40px;margin-top:5px") Insert User
        form.insert_user_form(action="POST")
            .info_name.input_flex
                .first_name_container
                    label(for="firstName") First Name
                    br
                    input#first_name(type="text", name="firstName")
                .last_name_container 
                    label(for="lastName") Last Name
                    br
                    input#first_name(type="text", name="lastName")
            .info-misc.input_flex
                .info_contact
                    .email_container
                        label(for="email") Email
                        br
                        input#mail(type="email", name="email")
                .info_usertype
                    .userType_container
                        label(for="userType") UserType
                        br
                        input#userTypeInput(type="number", name="userType", min="1" ,max="3")
            .info_password.input_flex
                .password_container
                    label(for="password") Password
                    br
                    input#userPassword(type="password", name="password")
                .cfm_password_container
                    label(for="cfm-password") Confirm Password
                    br
                    input#cfm_password(type="password", name="cfm-password") 
            section.form_seaction_2 
                .insertUser_submit_container 
                    button.insertUser(type="submit") Insert User 
                    span#insertUser_error