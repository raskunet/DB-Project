//- extends layout.pug

append css_files
  link(rel='stylesheet' href='/stylesheets/edit.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')

append js_files
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')

block main_content
  .container
    .row.justify-content-center
      .col-md-9.personal-info
        h1.text-primary.text-center Edit Profile
        hr
        form.form-horizontal(role='form' method='post' action='/edit/details')
          each record in userData
            .form-group
              label.col-lg-3.control-label First name:
              .col-lg-8
                input.form-control(name='Fname' type='text' value=record.firstName)
            .form-group
              label.col-lg-3.control-label Last name:
              .col-lg-8
                input.form-control(name='Lname' type='text' value=record.lastName)
            .form-group
              label.col-lg-3.control-label Old Password:
              .col-lg-8
                input.form-control(name='Opassword' type='password')
            .form-group
              label.col-lg-3.control-label New Password:
              .col-lg-8
                input.form-control(name='Npassword' type='password')
            .form-group
              label.col-lg-3.control-label Confirm New password:
              .col-lg-8
                input.form-control(name='Cpassword' type='password')
            #button.form-group
               input.btn.btn-primary(type='submit' value='Submit')
        //- Append anchor tag for previous page functionality
        a.btn.btn-secondary(href='/profile') Go Back
