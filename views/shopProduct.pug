extends layout.pug 

append css_files
    link(rel="stylesheet", href="/stylesheets/shopProduct.css")

block main_content
    section#shop
        #search-container
            input#search-input(type='text', placeholder='Search...')
            #filter-options
                select#category-select(name='category')
                    option(value='computers') Computers
                    option(value='gaming-chairs') Gaming Chairs
                    // Add more categories as needed
                select#Sorting(name='Sort')
                    option(value='low') Price Low to High
                    option(value='high') Price High to Low
                    option(value='bestreviews') Reviews High to Low
                    option(value='worstreviews') Reviews Low to High
                button#filter-button Apply Filters

        each product in products
            .card
                img(src=product.imagepath, alt='', style='width:100%')
                h1.name= product.productName
                p.price= `$${product.price}`
                p.description= product.description
                button(type='button', onclick=`addToCart(${product.id})`) Add to Cart
